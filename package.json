{
    "name": "spicey",
    "version": "4.1.0",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A web application framework for Curry",
    "category": [ "Web", "Database" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "base"          : ">= 3.0.0, < 4.0.0",
        "abstract-curry": ">= 3.0.0, < 4.0.0",
        "cdbi"          : ">= 3.0.0, < 4.0.0",
        "directory"     : ">= 3.0.0, < 4.0.0",
        "ertools"       : ">= 3.0.0, < 4.0.0",
        "filepath"      : ">= 3.0.0, < 4.0.0",
        "process"       : ">= 3.0.0, < 4.0.0",
        "time"          : ">= 3.0.0, < 4.0.0"
    },
    "configModule": "Spicey.PackageConfig",
    "executable": {
        "name": "spiceup",
        "main": "Spicey.SpiceUp"
    },
    "testsuite": {
        "src-dir": "examples",
        "modules": [ "TestSpicey" ]
    },
    "documentation": {
        "src-dir": "docs",
        "main": "main.tex"
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/spicey.git",
        "tag": "$version"
    }
}
